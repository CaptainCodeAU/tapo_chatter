{
    "name": "Ruff Formatter",
    "description": "Automatically formats Python code using ruff on file save",
    "enabled": true,
    "promptModifiers": [],
    "runOn": [
        "afterSave"
    ],
    "canRunWithoutFile": false,
    "files": [
        {
            "path": "**/*.py"
        }
    ],
    "excludedFiles": [],
    "action": {
        "type": "shell",
        "command": "ruff format ${filePath}",
        "workingDir": ".",
        "continueOnError": true
    },
    "suggestUserAction": {
        "description": "Formatting changes were applied to your file.",
        "actionTemplate": "Automatically formatted ${fileName} with ruff."
    }
}