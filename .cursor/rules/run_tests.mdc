{
    "name": "Run Tests",
    "description": "Run pytest when test files are modified",
    "enabled": true,
    "promptModifiers": [],
    "runOn": [
        "afterSave"
    ],
    "canRunWithoutFile": false,
    "files": [
        {
            "path": "tests/**/*.py"
        }
    ],
    "excludedFiles": [],
    "action": {
        "type": "shell",
        "command": "python -m pytest ${filePath} -v",
        "workingDir": ".",
        "continueOnError": true
    },
    "suggestUserAction": {
        "description": "Check test results",
        "actionTemplate": "Test results for ${fileName}:\n\n{{outputLines}}"
    }
}