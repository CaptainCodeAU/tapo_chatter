{
    "name": "Dependency Check",
    "description": "Verifies that all required dependencies are installed",
    "enabled": true,
    "promptModifiers": [],
    "runOn": [
        "beforeRun"
    ],
    "canRunWithoutFile": false,
    "files": [
        {
            "path": "**/*.py"
        }
    ],
    "excludedFiles": [],
    "action": {
        "type": "shell",
        "command": "pip freeze | grep -E 'pytest|tapo|rich|python-dotenv' || echo 'Warning: Some dependencies may be missing'",
        "workingDir": ".",
        "continueOnError": true
    },
    "suggestUserAction": {
        "description": "Check if required dependencies are installed",
        "actionTemplate": "Dependency check results:\n\n{{outputLines}}\n\nMake sure all required packages are installed:\n- tapo\n- rich\n- python-dotenv\n- pytest (for testing)"
    }
}